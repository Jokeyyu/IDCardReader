<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:background="@color/colorMenuTop"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_manageMember"
            android:textSize="18dp"
            android:textColor="@color/colorWhite"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"/>
        <ImageView
            android:id="@+id/img_back__deleteM"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:src="@drawable/back_horizontal"
            android:paddingRight="20dp" />
    </LinearLayout>
    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:layout_weight="1">
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="100dp"
                        android:text="删除系统成员"
                        android:gravity="center"
                        android:textColor="@color/colorBlack"
                        android:textSize="18dp"/>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="成员信息："
                            android:paddingTop="15px"
                            android:paddingBottom="15px"/>

                        <EditText
                            android:id="@+id/edit_usernameOrPhoneNumber_deleteM"
                            android:layout_width="130dp"
                            android:layout_height="wrap_content"
                            android:textSize="14dp"
                            android:hint="手机号码/用户名"/>
                            <!--android:textColorHint="@color/colorTextTips"/>-->
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal">
                        <Button
                            android:id="@+id/btn_submit_deleteM"
                            android:layout_width="200dp"
                            android:layout_height="35dp"
                            android:background="@drawable/button"
                            android:text="删          除"
                            android:textColor="@color/colorWhite"
                            android:layout_marginTop="20dp"/>
                    </LinearLayout>

                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
