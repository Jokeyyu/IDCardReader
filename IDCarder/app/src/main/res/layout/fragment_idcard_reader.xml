<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/title_nfc"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:layout_alignParentTop="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_nfc"
                android:textSize="18dp"
                android:textColor="@color/colorTitle_orange"
                android:layout_centerInParent="true"/>
            <ImageView
                android:id="@+id/img_home"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:src="@drawable/home_could_change"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="@color/colorLineGray" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite">
                    <ImageView
                        android:id="@+id/img_head"
                        android:layout_width="80dp"
                        android:layout_height="100dp"
                        android:src="@drawable/head1"
                        android:layout_margin="10dp" />
                    <TextView
                        android:id="@+id/txt_idcardName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="姓  名:"
                        android:layout_toRightOf="@id/img_head"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp" />
                    <TextView
                        android:id="@+id/txt_idcardName_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="周吴郑"
                        android:layout_toRightOf="@+id/txt_idcardName"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="10dp"/>
                    <TextView
                        android:id="@+id/txt_idcardGender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="性  别:"
                        android:layout_toRightOf="@id/img_head"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_below="@id/txt_idcardName"/>
                    <TextView
                        android:id="@+id/txt_idcardGender_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="男"
                        android:layout_toRightOf="@+id/txt_idcardGender"
                        android:layout_below="@id/txt_idcardName"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"/>
                    <TextView
                        android:id="@+id/txt_idcardNation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="名  族:"
                        android:layout_toRightOf="@id/img_head"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_below="@id/txt_idcardGender"/>
                    <TextView
                        android:id="@+id/txt_idcardNation_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="汉"
                        android:layout_toRightOf="@+id/txt_idcardNation"
                        android:layout_below="@id/txt_idcardGender"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"/>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="20px"
                    android:background="@color/colorLineBig" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp">
                    <TextView
                        android:id="@+id/txt_idcardBirth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="出  生:" />
                    <TextView
                        android:id="@+id/txt_idcardBirth_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1995年11月17日"
                        android:layout_toRightOf="@+id/txt_idcardBirth"
                        android:layout_marginLeft="5dp"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="1px"
                        android:background="@color/colorLineGray" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp">
                    <TextView
                        android:id="@+id/txt_idcardAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="住  址:" />
                    <TextView
                        android:id="@+id/txt_idcardAddress_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="南京市雨花台区软件大道180号大数据产业基地8栋409"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@id/txt_idcardAddress"
                        android:singleLine="false"/>
                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="20px"
                    android:background="@color/colorLineBig" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp">
                    <TextView
                        android:id="@+id/txt_idcardNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="公民身份号码:" />
                    <TextView
                        android:id="@+id/txt_idcardNumber_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="152632488660011235"
                        android:layout_toRightOf="@+id/txt_idcardNumber"
                        android:layout_marginLeft="5dp"/>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="20px"
                    android:background="@color/colorLineBig" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp">
                    <TextView
                        android:id="@+id/txt_idcardDepartment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="签发机关:" />
                    <TextView
                        android:id="@+id/txt_idcardDepartment_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="南京市公安局"
                        android:layout_toRightOf="@+id/txt_idcardDepartment"
                        android:layout_marginLeft="5dp"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="1px"
                        android:background="@color/colorLineGray" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp">
                    <TextView
                        android:id="@+id/txt_idcardLifecycle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="有效期限:" />
                    <TextView
                        android:id="@+id/txt_idcardLifecycle_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2015.11.12-2020.11.12"
                        android:layout_toRightOf="@+id/txt_idcardLifecycle"
                        android:layout_marginLeft="5dp"/>
                </RelativeLayout>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="20px"
                    android:background="@color/colorLineBig" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="150dp">
                <TextView
                    android:id="@+id/txt_nfc_tips"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/nfcReadTips"
                    android:layout_centerInParent="true"
                    android:textSize="18dp"
                    android:visibility="gone" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/txt_select_readCardMethod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请把身份证放置NFC感应区域"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp" />
</RelativeLayout>
