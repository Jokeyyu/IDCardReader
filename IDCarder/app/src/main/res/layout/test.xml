<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <Button
        android:id="@+id/btn_send"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:text="发送"
        android:background="@drawable/button_could_change"
        android:layout_alignParentBottom="true"/>
    <ImageView
        android:id="@+id/testPIC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/home3"/>
    <LinearLayout
        android:id="@+id/text_checkBox"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="11111111"
            android:background="@drawable/txt_could_change"/>
        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2222222"
            android:background="@drawable/txt_could_change"
            style="@style/CustomCheckBoxTheme"/>
        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="22222222"
            android:paddingLeft="50dp"
            android:paddingTop="10dp"
            android:button="@drawable/checkbox" />
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RadioGroup>
    </LinearLayout>
</RelativeLayout>