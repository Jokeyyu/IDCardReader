<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorWhite">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/img_backR"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:src="@drawable/back_could_change"
            android:paddingRight="10dp"
            android:paddingLeft="10dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_register_personal"
            android:textSize="18dp"
            android:textColor="@color/colorTitle_orange"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/colorLineGray" />
    </LinearLayout>
    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="用  户  名："
                        android:paddingTop="15px"
                        android:paddingBottom="15px"/>

                    <EditText
                        android:id="@+id/edit_usernameR"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:background="@drawable/edit_bg"
                        android:textCursorDrawable="@drawable/cursor_style"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="密        码："
                        android:paddingTop="15px"
                        android:paddingBottom="15px"
                        />
                    <EditText
                        android:id="@+id/edit_passwordR"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:password="true"
                        android:singleLine="true"
                        android:background="@drawable/edit_bg"
                        android:textCursorDrawable="@drawable/cursor_style"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="确认密码："
                        android:paddingTop="15px"
                        android:paddingBottom="15px" />
                    <EditText
                        android:id="@+id/edit_password_verifyR"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:password="true"
                        android:singleLine="true"
                        android:background="@drawable/edit_bg"
                        android:textCursorDrawable="@drawable/cursor_style"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="手机号码："
                        android:paddingTop="15px"
                        android:paddingBottom="15px"
                        />
                    <EditText
                        android:id="@+id/edit_phoneNumberR"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:inputType="phone"
                        android:singleLine="true"
                        android:background="@drawable/edit_bg"
                        android:textCursorDrawable="@drawable/cursor_style"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="验  证  码："
                        android:paddingTop="15px"
                        android:paddingBottom="15px"
                        />
                    <EditText
                        android:id="@+id/edit_validate_numberR"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:background="@drawable/edit_bg"
                        android:textCursorDrawable="@drawable/cursor_style"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/getValidateNumber"
                        android:paddingTop="15px"
                        android:paddingBottom="15px"
                        android:textColor="@color/colorRed"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal">
                    <Button
                        android:id="@+id/btn_submit"
                        android:layout_width="fill_parent"
                        android:layout_height="35dp"
                        android:background="@drawable/button_could_change"
                        android:text="注          册"
                        android:textColor="@color/colorWhite"
                        android:layout_marginTop="20dp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

