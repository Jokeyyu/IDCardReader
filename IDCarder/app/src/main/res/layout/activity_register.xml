<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:background="@color/colorMenuTop"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title"
            android:textSize="18dp"
            android:textColor="@color/colorWhite"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"/>
        <ImageView
            android:id="@+id/img_backR"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:src="@drawable/back_horizontal"
            android:paddingRight="20dp" />
    </LinearLayout>
    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:layout_weight="1">
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="100dp"
                        android:layout_below="@+id/btn_register"
                        android:text="个人用户注册"
                        android:gravity="center"
                        android:textColor="@color/colorBlack"
                        android:textSize="18dp"/>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="用  户  名："
                            android:paddingTop="15px"
                            android:paddingBottom="15px"/>

                        <EditText
                            android:id="@+id/edit_usernameR"
                            android:layout_width="130dp"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <!--<TextView-->
                    <!--android:layout_width="fill_parent"-->
                    <!--android:layout_height="1px"-->
                    <!--android:background="@color/colorLine"/>-->
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="密        码："
                            android:paddingTop="15px"
                            android:paddingBottom="15px"
                            />
                        <EditText
                            android:id="@+id/edit_passwordR"
                            android:layout_width="130dp"
                            android:layout_height="wrap_content"
                            android:password="true" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="确认密码："
                            android:paddingTop="15px"
                            android:paddingBottom="15px"
                            android:layout_below="@id/edit_passwordR" />
                        <EditText
                            android:id="@+id/edit_password_verifyR"
                            android:layout_width="130dp"
                            android:layout_height="wrap_content"
                            android:password="true"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="手机号码："
                            android:paddingTop="15px"
                            android:paddingBottom="15px"
                            />
                        <EditText
                            android:id="@+id/edit_phoneNumberR"
                            android:layout_width="130dp"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="验  证  码："
                            android:paddingTop="15px"
                            android:paddingBottom="15px"
                            />
                        <EditText
                            android:id="@+id/edit_validate_numberR"
                            android:layout_width="130dp"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/getValidateNumber"
                            android:paddingTop="15px"
                            android:paddingBottom="15px"
                            android:textColor="@color/colorRed"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal">
                        <Button
                            android:id="@+id/btn_submit"
                            android:layout_width="200dp"
                            android:layout_height="35dp"
                            android:background="@drawable/button"
                            android:text="注          册"
                            android:textColor="@color/colorWhite"
                            android:layout_marginTop="20dp"/>
                    </LinearLayout>

                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

