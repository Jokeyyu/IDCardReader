                    <Spinner
                        android:id="@+id/spin_username_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:entries="@array/selectLogin">

                    </Spinner>
                    <EditText
                        android:id="@+id/edit_usernameL"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <!--<TextView-->
