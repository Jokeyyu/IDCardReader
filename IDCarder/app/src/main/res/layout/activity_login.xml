                android:layout_centerHorizontal="true"/>
            <TextView
                android:id="@+id/txt_welcome"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_marginBottom="30dp"
                android:layout_centerHorizontal="true"
                android:text="@string/welcome"
                android:textSize="20dp"
